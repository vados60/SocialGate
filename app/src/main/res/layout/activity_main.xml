<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pre_login_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >

    <RelativeLayout
        android:id="@+id/pre_login_activity_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/pre_login_activity_layout_colorbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_border" />

        <TextView
            android:id="@+id/pre_login_activity_txtlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pre_login_activity_txtview"
            android:layout_centerHorizontal="true"
            android:text="@string/login_sub_heading"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pre_login_activity_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pre_login_activity_layout_colorbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/cotunity_logo" />

        <Button
            android:id="@+id/pre_login_activity_layout_classic_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pre_login_activity_logintxtdesc4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/classical_signup_login_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/login_btn_text"
            android:textColor="@color/black_opaque"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/pre_login_activity_layout_social_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pre_login_activity_logintxtdesc1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pre_login_activity_layout_facebook_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/facebook_login_bt" />

            <Button
                android:id="@+id/pre_login_activity_layout_linkedin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/linkedin_login_bt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pre_login_activity_layout_social_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pre_login_activity_layout_social_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pre_login_activity_layout_instagram_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/instagram_login_bt" />

            <Button
                android:id="@+id/pre_login_activity_layout_twitter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/twitter_login_bt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pre_login_activity_layout_social_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/pre_login_activity_layout_social_btn_2"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pre_login_activity_layout_google_plus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/google_login_bt" />

        </LinearLayout>

        <TextView
            android:id="@+id/pre_login_activity_logintxtdesc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pre_login_activity_txtlogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:paddingLeft="22dp"
            android:paddingRight="20dp"
            android:text="@string/linkedin_desc_text_1"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/pre_login_activity_logintxtdesc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pre_login_activity_layout_social_btn_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:paddingLeft="22dp"
            android:paddingRight="20dp"
            android:text="@string/login_desc_text_1"
            android:textColor="@color/gray"
            android:textSize="16dp" />
    </RelativeLayout>

</ScrollView>